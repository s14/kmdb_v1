<div class="page-header">
  <h1>Directors</h1>
</div>

<% @list_of_directors.each do |director| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= director.name %></h3>
        </div>
        <div class="panel-body">
          <div class="col-sm-2">
              <img src="<%= director.image_url %>" class="img-responsive">
          </div>
          <div class="col-sm-10">
            <dl>
              <dt>Date of Birth</dt>
              <dd><%= director.dob %></dd>

              <dt>Actions</dt>
              <dd>
                <a href="/directors/<%= director.id %>" class="btn btn-primary">Show</a>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
